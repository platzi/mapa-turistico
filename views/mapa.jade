html(lang="es")
    head
        meta(charset="utf-8")
        title= title
        meta(name="description", content= description)
        meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1")

        link(rel="stylesheet", href="/css/normalize.css")
        link(rel="stylesheet", href="http://cdn.leafletjs.com/leaflet-0.5.1/leaflet.css")
        link(rel="stylesheet", href="/css/main.css")
    body
        header(id="header")
            h1 Mapa turístico
        section(id="sidebar")
            h2 Últimos sitios agregados
            ul(id="places")

        section(id="main")
            div(id="mimapa")
        article(id="formulario", style="display:none;")
            h2 Agregar sitio turistico
            form(action="#", method="post")
                a(id="cerrar", href="#cerrar") x
                p
                    img(src="#{usuario[0].imagen}", alt="#{usuario[0].usuario}")
                    |#{usuario[0].usuario}
                    input(type="hidden", name="id_usuario", value="#{usuario[0].id}")
                p
                    label(for="ubicacion") ubicacion:
                    br
                    input(id="ubicacion", name="ubicacion", type="text")
                p
                    label(for="imagen") imagen:
                    br
                    input(id="imagen", name="imagen", type="file")
                p
                    label(for="descripcion") descripcion:
                    br
                    textarea(id="descripcion", name="descripcion")
                p
                    input(type="submit", value="guardar")
                p
                    a(id="salir", href="/salir") Salir

        script(src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js")
        script(src="//code.jquery.com/ui/1.10.2/jquery-ui.js")
        script(src="http://cdn.leafletjs.com/leaflet-0.5.1/leaflet.js")
        script(src="/socket.io/socket.io.js")
        script(src="/js/main.js")